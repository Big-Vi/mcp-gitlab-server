    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GitLab MCP Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mcp-gitlab-server",
                    "--package=mcp-gitlab-server"
                ],
                "filter": {
                    "name": "mcp-gitlab-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug GitLab MCP Server (lib tests)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mcp-gitlab-server"
                ],
                "filter": {
                    "name": "mcp-gitlab-server",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        }
    ]
}